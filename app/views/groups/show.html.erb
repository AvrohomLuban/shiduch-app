<h1 class = "text-center"><%= @group.name %><br></h1>
Group Leader: <%= @group.leader_name %>

<br>
All People in this group:<br>
<% @group.users.each_slice(3) do | three_users | %>
  <div class = "row">
    <% three_users.each do | user | %>
      <div class = "col-md-4">
      <div class = "well">
        <div class = "text-center"><%= user.first_name %> <%= user.last_name %><br>
        </div>
      </div>
      </div>
    <% end %>
  </div>
<% end %>

<hr>
All Singles in this group:
<% @group.users.each do  | user | %>
  <% user.profiles.each do | profile | %>
    <%= profile.first_name %> <%= profile.last_name %>
  <% end %>
<% end %>

